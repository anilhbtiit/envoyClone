FROM mosnio/envoy-go-extension:beta-v1
COPY ./envoy-go-filter-samples/envoy-yaml_skip_validate /etc/envoy.yaml
COPY ./envoy-go-filter-samples/libgolang.so /usr/local/envoy-go-extension/libgolang.so
RUN chmod go+r /etc/envoy.yaml /usr/local/envoy-go-extension/libgolang.so
CMD ["/usr/local/bin/envoy", "-c", "/etc/envoy.yaml", "--service-cluster", "proxy"]
