FROM envoyproxy/envoy-dev:latest
COPY ./envoy.yaml /etc/envoy.yaml
COPY ./wasmlib/envoy_filter_http_wasm_example.wasm /wasmlib/envoy_filter_http_wasm_example.wasm
RUN chmod go+r /etc/envoy.yaml /wasmlib/envoy_filter_http_wasm_example.wasm
CMD ["/usr/local/bin/envoy", "-c", "/etc/envoy.yaml", "--service-cluster", "proxy"]
