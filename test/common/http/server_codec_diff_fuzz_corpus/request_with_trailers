configuration {
    normalize_path: true
}

request {
    scheme { value: "https" }
    method { value: "POST" }
    path { value: "/database?key=value&key2=value2&etc&etc2" }
    authority { value: "foo.bar.com" }
    headers {
        key: "content-length"
        value: "10"
    }
    headers {
        key: "baz"
        value: "fuz"
    }
}

send_request_body: true

request_trailers {
    trailers {
        key: "something"
        value: "other"
    }
    trailers {
        key: "key"
        value: "value"
    }
}

response {
    status { value: "200" }
}
