configuration {
    normalize_path: true
    path_with_escaped_slashes_action: REJECT_REQUEST
}

request {
    scheme { value: "https" }
    method { value: "GET" }
    path { value: "/path%2Fwith%2fescaped%5Cslashes%5c" }
    authority { value: "foo.bar.com" }
    headers {
        key: "foo"
        value: "bar"
    }
}
