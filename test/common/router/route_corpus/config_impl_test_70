config {
  virtual_hosts {
    name: "local_service"
    domains: "*"
    routes {
      match {
        prefix: "/foo"
      }
      route {
        cluster: "local_service_grpc"
        priority: HIGH
      }
    }
    routes {
      match {
        prefix: "/bar"
      }
      route {
        cluster: "local_service_grpc"
      }
    }
    virtual_clusters {
      pattern: "^/bar$"
      name: "foo"
      method: POST
    }
  }
}
headers {
  headers {
    key: ":authority"
    value: "www.lyft.com"
  }
  headers {
    key: ":path"
    value: "/bar"
  }
  headers {
    key: ":method"
    value: "GET"
  }
}
