config {
  virtual_hosts {
    name: "local_service"
    domains: "*"
    routes {
      match {
        prefix: "/"
        query_parameters {
          name: "id"
          value: "\\d+[02468]"
          regex {
            value: true
          }
        }
        query_parameters {
          name: "debug"
        }
      }
      route {
        cluster: "local_service_with_multiple_query_parameters"
      }
    }
    routes {
      match {
        prefix: "/"
        query_parameters {
          name: "param"
          value: "test"
        }
      }
      route {
        cluster: "local_service_with_query_parameter"
      }
    }
    routes {
      match {
        prefix: "/"
        query_parameters {
          name: "debug"
        }
      }
      route {
        cluster: "local_service_with_valueless_query_parameter"
      }
    }
    routes {
      match {
        prefix: "/"
      }
      route {
        cluster: "local_service_without_query_parameters"
      }
    }
  }
}
headers {
  headers {
    key: ":authority"
    value: "example.com"
  }
  headers {
    key: ":path"
    value: "/?param=testing"
  }
  headers {
    key: ":method"
    value: "GET"
  }
}
