FROM gcr.io/oss-fuzz-base/base-builder

RUN apt-get update && apt-get -y install  \
	build-essential \
	openjdk-8-jdk   \
	make            \
    ninja-build     \
    curl            \
    autoconf        \
    libtool         \
    cmake           \
    wget            \
    golang          \
    python

# Install Bazel
RUN echo "deb [arch=amd64] http://storage.googleapis.com/bazel-apt stable jdk1.8" | tee /etc/apt/sources.list.d/bazel.list
RUN curl https://bazel.build/bazel-release.pub.gpg | apt-key add -
RUN apt-get update && apt-get install -y bazel

# Build libFuzzer driver
RUN clang++ -O1 -fno-omit-frame-pointer -gline-tables-only -DFUZZING_BUILD_MODE_UNSAFE_FOR_PRODUCTION -stdlib=libc++ \
        -std=c++11 -O2 -fPIC -fsanitize=address -fsanitize-address-use-after-scope -fno-sanitize=vptr \
        -c /src/libfuzzer/*.cpp -I/src/libfuzzer
RUN ar r /usr/lib/libFuzzingEngine.a *.o
